<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>Administration La Tournichette -
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<!-- CSS only -->
			<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
			<!-- Icons -->
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
		{% endblock %}
	</head>
	<body>
		{% block navigation %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container-fluid">
					<a href="#" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
						<span class="header-logo__title">La Tournichette</span>
					</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
                        {% if app.user %}
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a class="nav-link {{ " app_back_cart_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_cart_list') }}">Panier</a>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ " app_back_product_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_product_list') }}">Produits</a>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ " app_back_order_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_order_list') }}">Commandes</a>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ " app_back_user_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_user_list') }}">Utilisateurs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link {{ " app_back_depot_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_depot_list') }}">Dépôt</a>
							</li>
						</ul>
                        {% endif %}
						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
						                    <li class="nav-item dropdown">
						                        {% if app.user %}
						                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
						                            data-bs-toggle="dropdown">
						                            <span>{{ app.user.firstname }} {{ app.user.lastname }} ({{ app.user.roleName }})</span>
						                            <i class="bi bi-person-square"></i>
						                        </a>
						                        
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="{{ path('app_back_user_show', {'id': app.user.id}) }}">Profil</a></li>
                                                    <li>
                                                        <hr class="dropdown-divider">
                                                    </li>
                                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                                </ul>
												{% endif %}
						                    </li>
						                </ul>
						
						                {% if not app.user %}
						                <a href="{{ path('app_login') }}" class="btn btn-danger me-2">Connexion</a>
						                {% endif %}
					</div>
				</div>
			</nav>
			{% block subnav %}{% endblock %}
		{% endblock %}
		{% block body %}{% endblock %}
	</body>
	<!-- JavaScript Bundle with Popper -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
	{% block javascripts %}
		<script src="{{ asset('scripts/cart.js')}}"></script>
	{% endblock %}
</html>
