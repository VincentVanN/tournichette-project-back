
{% block title %}Commandes{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="text-center">Détails des commandes</h2>

    <table class="table table-bordered">
    <tr>
        <th>Client</th>
        <td>{{ order.user.firstname }}</td>
        <td>{{ order.user.lastname }}</td>
    </tr>
    </tr>

    <tr>
        <th>Date Commande </th>
        <td>{{ order.getDateOrder ? order.getDateOrder|date('Y-m-d H:i:s') : '-' }}</td>
    </tr>

    <tr>
        <th>Address </th>
        <td>{{ order.user.address }}</td>
    </tr>

    <tr>
        <th>Dépôt</th>
        <td>{{ order.depot.name }}</td>
    </tr>

    <tr>
        <th>Détails produits</th>
    </tr>
    <tr>
    {% for currentProduct in order.orderProducts %}
        <th>Produits</th>
            <td>{{ currentProduct.product.name }}</td>
        <th>quantité</th>
            <td>{{ currentProduct.quantity }}</td> <td>{{ currentProduct.product.unity }}</td>    
        {% endfor %}
