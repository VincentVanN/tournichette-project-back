{# {% block title %}Commandes{% endblock %} #}
{% block stylesheets %}
<style type="text/css">

        table {
         table-layout: fixed;
        width: 100%;
        }
        body {
        font-family: 'Courier';
        margin: 0;
        }
        td {
            text-align: center;
            padding: 10px;
        }
        th {
            color: white;
            border-radius: bold 5px grey;
            background-color: black;
        }
        .nborder {
            color: #125733;
            font-style: bold;
        }
        .first-lign {
            height: 5px;
            width: 100%;
            background-color: #125733;
        }
        .second-lign {
            height: 5px;
            width: 100%;
             background-color: #d6c873;
            margin-bottom: 20px;
        }
        
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="nborder">Commande n°{{ order.id }}</h2>
    <div class="first-lign"></div>
    <div class="second-lign"></div>
    
    <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Client</th>
                            <th scope="col">Tél</th>
                            <th scope="col">Date commande</th>
                            <th scope="col">Dépôt</th>
                        </tr>
                    </thead>
                <tbody>
                <tr>
                    <td>{{ order.user.firstname }} {{ order.user.lastname }}</td>
                    <td>{{ order.user.phone }}</td>
                    <td>{{ order.getDateOrder ? order.getDateOrder|date('Y-m-d') : '-' }}</td>
                    <td>{{ order.depot.name }}</td>
                </tr>
                </tbody>
                    <thead>
                        <tr>
                            <th scope="col=4">Produits</th>
                            <th scope="col">Quantité</th>
                            <th scope="col">Prix</th>
                        </tr>
                    </thead>
            <tbody>
            {% for currentProduct in order.orderProducts %}
                <tr>
                    <td scope="col">{{ currentProduct.product.name }}</td>     
                    <td scope="col">{{ currentProduct.quantity}}{{ currentProduct.product.unity }}</td> 
                    <td scope="col">{{ currentProduct.quantity}}{{ currentProduct.product.price }}</td> 
                </tr>
                {% endfor %}

                <thead>
                    <tr>
                    <th scope="col">Panier</th>
                    <th scope="col">Quantité</th>
                    <th scope="col">Prix</th>
                </thead>

            {% for currentCart in order.cartOrders %}
                <tr>
                    <td>{{ currentCart.cart.name }}</td>
                    <td>{{ currentCart.quantity }}</td>
                    <td>{{ currentCart.cart.price }}</td>
                </tr>
                {% endfor %}
                <thead>
                    <tr>  
                    <th scope="col">TOTAL Prix</th>
                    <th scope="col">Commande payée ?</th>
                </thead> 
                
                <tr>              
                    <td scope="col">{{ order.price}}</td>
                    <td scope="col">{{ order.getPaymentStatus}}</td>
                </tr>
        </tbody>
    </table>
</div>        
{% endblock %}