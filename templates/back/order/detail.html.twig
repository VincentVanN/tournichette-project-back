
{% block title %}Commandes{% endblock %}

{% block body %}
<div class="container-fluid">
    <h2 class="text-center">Détails des commandes</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">client</th>
                <th scope="col">Date commande</th>
                <th scope="col">Dépôt</th>
            </tr>
        </thead>
    <tbody>
    <tr>
        <td>{{ order.user.lastname }}</td>
        <td>{{ order.getDateOrder ? order.getDateOrder|date('Y-m-d H:i:s') : '-' }}</td>
        <td>{{ order.depot.name }}</td>
    </tr>

    <tr>
    <th scope="col">Produits</th>
{% for currentProduct in order.orderProducts %}
        {# <th>Produits</th> #}
            <td>{{ currentProduct.product.name }}</td>
        {# <th>quantité</th> #}
            <td>{{ currentProduct.quantity }}</td> <td>{{ currentProduct.product.unity }}</td>    
        {% endfor %}
    </tr>

    <tr>
    <th scope="col">Panier</th>
{% for currentCart in order.cartOrders %}
                    <td>{{ currentCart.cart.name }}</td>
                    <td>{{ currentCart.quantity }}</td>
                    {# <td>{{ currentCart.cart.product }}</td> #}
            
        {% endfor %}
    </tr>
    </tbody>
</table>
