{% extends 'base.html.twig' %}

{% block title %}Backoffice{% endblock %}

{% block navigation %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a href="{{ path('app_back_index') }}" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none header-logo">
                <span class="header-logo__title">La Tournichette</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link {{ "app_back_cart_" in app.request.attributes.get('_route') ? "active" : "" }}" href="{{ path('app_back_cart_list') }}">Panier</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ "app_back_product_" in app.request.attributes.get('_route') ? "active" : "" }}" href="{{ path('app_back_product_list') }}">Produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ "app_back_order_" in app.request.attributes.get('_route') ? "active" : "" }}" href="{{ path('app_back_order_list') }}">Commandes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ "app_back_user_" in app.request.attributes.get('_route') ? "active" : "" }}" href="{{ path('app_back_user_list') }}">Utilisateurs</a>
                    </li>
					<li class="nav-item">
						<a class="nav-link {{ " app_back_depot_" in app.request.attributes.get('_route') ? " active" : " " }}" href="{{ path('app_back_depot_list') }}">Dépôt</a>
					</li>
                </ul>
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        {% if app.user %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown">
                            <span>{{ app.user.email }}( {{ app.user.roleName }} )</span>
                            <i class="bi bi-person-square"></i>
                        </a>
                        {% endif %}
                        
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_back_index') }}">Backoffice</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                        </ul>
                    </li>
                </ul>

                {% if not app.user %}
                <a href="{{ path('app_login') }}" class="btn btn-danger me-2">Connexion</a>
                {% endif %}
            </div>
        </div>
    </nav>
    {% block subnav %}
    {% endblock %}
{% endblock %}