{% extends 'back/depot/_base.html.twig' %}

{% block title %}depot index{% endblock %}

{% block body %}
 
    <h1>Les dépôts</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                {# <th>Commande</th> #}
               
            </tr>
        </thead>
        <tbody>
        {% for depot in depots %}
            <tr>
               <td>{{ depot.id }}</td>
                <td>{{ depot.firstname }}</td>
                <td>{{ depot.phone }}</td>
                <td>{{ depot.address }}</td>
                {# <td>{{ depot.orders}}</td> #}
                
              
            
                <td>
                    <a href="{{ path('app_back_depot_show', {'id': depot.id}) }}" class = "btn btn-info">{{ depot.firstname }}</a>
                    <a href="{{ path('app_back_depot_edit', {'id': depot.id}) }}" class = "btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_depot_new') }}"class = "btn btn-success">Créer un nouveau dépôt</a>

{% endblock %}

