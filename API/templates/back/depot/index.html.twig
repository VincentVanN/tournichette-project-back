{% extends 'back/depot/_base.html.twig' %}

{% block title %}depot index{% endblock %}

{% block body %}
    <h1>depot index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>adresse</th>
               
            </tr>
        </thead>
        <tbody>
        {% for depot in depots %}
            <tr>
               <td>{{ depot.id }}</td>
                <td>{{ depot.firstname }}</td>
                
              
            
                <td>
                    <a href="{{ path('app_back_depot_show', {'id': depot.id}) }}" class = "btn btn-info">show</a>
                    <a href="{{ path('app_back_depot_edit', {'id': depot.id}) }}" class = "btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_depot_new') }}"class = "btn btn-success">Create new</a>

{% endblock %}

