{% extends 'back/category/_base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

     <a class = "btn btn-success" href="{{ path('app_back_category_list') }}">Retour à la liste</a>

<div class="container">
    <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_back_category_edit', {'id': category.id}) }}">Modifier</a>

    {{ include('back/category/_delete.html.twig') }}
</div>
{% endblock %}