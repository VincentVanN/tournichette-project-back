{% extends 'back/category/_base.html.twig' %}

{% block title %}category index{% endblock %}

{% block body %}
    <h1>Les catégories</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
               <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('app_back_category_show', {'id': category.id}) }}" class = "btn btn-info">{{ category.name }}</a>
                    <a href="{{ path('app_back_category_edit', {'id': category.id}) }}" class = "btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_category_new') }}"class = "btn btn-success">Créer une nouvelle catégorie</a>

{% endblock %}
