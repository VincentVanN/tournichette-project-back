{% extends 'back/cart/_base.html.twig' %}

{% block title %} Panier{% endblock %}

{% block body %}

<div class="container">
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cart.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_back_cart_edit', {'id': cart.id}) }}">Modifier</a>

    {{ include('back/cart/_delete.html.twig') }}
</div>
{% endblock %}