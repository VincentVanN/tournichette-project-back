{% extends 'back/cart/_base.html.twig' %}

{% block title %}cart index{% endblock %}

{% block body %}
    <h1>cart index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Grand Panier</th>
                <th>Téléphone</th>
                <th>prix</th>
            </tr>
        </thead>

        <thead>
            <tr>
                <th>Id</th>
                <th>Petit Panier</th>
                <th>Téléphone</th>
                <th>prix</th>
            </tr>
        </thead>

        <thead>
            <tr>
                <th>Id</th>
                <th>Panier Ecureuil</th>
                <th>prix</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
               <td>{{ cart.id }}</td>
               <td>{{ cart.typeCart }}</td>
                <td>{{ cart.price }}</td>
              
            
                <td>
                    <a href="{{ path('app_back_cart_show', {'id': cart.id}) }}" class = "btn btn-info">show</a>
                    <a href="{{ path('app_back_cart_edit', {'id': cart.id}) }}" class = "btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_cart_new') }}"class = "btn btn-success">Create new</a>

{% endblock %}
