{% extends 'back/cart/_base.html.twig' %}

{% block title %}Les Paniers{% endblock %}

{% block body %}
    <h1>Grand Panier</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Version</th>
                <th>Prix</th>
                <th>Commande</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
               <td>{{ cart.id }}</td>
                {# <td>{{ cart.typeCart }}</td> #}
                <td>{{ cart.price }}</td>
                {# <td>{{ cart.cartOrders }}</td> #}
              
            
                <td>
                    <a href="{{ path('app_back_cart_show', {'id': cart.id}) }}" class = "btn btn-info">show</a>
                    <a href="{{ path('app_back_cart_edit', {'id': cart.id}) }}" class = "btn btn-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_cart_new') }}"class = "btn btn-success">Create new</a>

{% endblock %}
