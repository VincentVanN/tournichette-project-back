{% extends 'back/cart/_base.html.twig' %}

{% block title %}cart index{% endblock %}

{% block body %}
    <h1>Les Paniers</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Version</th>
                <th>Prix</th>
                {# <th>Commande</th> #}
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
               <td>{{ cart.id }}</td>
                <td>{{ cart.typecart }}</td> 
                <td>{{ cart.price }}</td>
                {# <td>{{ cart.cartorders }}</td>  #}
              
            
                <td>
                    <a href="{{ path('app_back_cart_show', {'id': cart.id}) }}" class = "btn btn-info">{{ cart.typecart }}</a>
                    <a href="{{ path('app_back_cart_edit', {'id': cart.id}) }}" class = "btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_cart_new') }}"class = "btn btn-success">Cr√©er un nouveau panier</a>

{% endblock %}
